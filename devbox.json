{
  "packages": [
      "python@3.11",
      "go@1.21",
      "curl@latest",
      "htop@latest",
      "cargo@latest",
      "git@latest",
      "bazelisk@latest",

  ],
  "shell": {
    "init_hook": [


    "echo \"python: $(python --version)\"",
